<%- include("header") -%>

    <div class="box" id="heading">
      <h1> <%= kindOfDay %> </h1>
    </div>

    <div class="box">
      <% newListItems.forEach(function(newListItem) { %>
        <form class="" action="/delete" method="post">
          <div class="item">
              <input type="checkbox" name="checkbox" value=<%= newListItem._id %> onChange="this.form.submit()">
              <p> <%= newListItem.name %> </p>
          </div>
            <input type="hidden" name="listName" value="<%= kindOfDay %>">
        </form>
      <% }); %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New To-Do" autocomplete="off">
        <button type="submit" name="button" value="<%=kindOfDay%>">+</button>
      </form>
    </div>

  <%- include("footer") -%>
